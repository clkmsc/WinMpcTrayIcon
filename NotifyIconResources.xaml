<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:WinMpcTrayIcon">

    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Mode">
            <MenuItem Header="Repeat" Command="{Binding SendCommand}" CommandParameter="repeat" />
            <MenuItem Header="Random" Command="{Binding SendCommand}" CommandParameter="random" />
            <MenuItem Header="Single" Command="{Binding SendCommand}" CommandParameter="single" />
            <MenuItem Header="Consume" Command="{Binding SendCommand}" CommandParameter="consume" />
        </MenuItem>
        <MenuItem Header="Play" Command="{Binding SendCommand}" CommandParameter="play" />
        <MenuItem Header="Pause" Command="{Binding SendCommand}" CommandParameter="pause" />
        <MenuItem Header="Stop" Command="{Binding SendCommand}" CommandParameter="stop" />
        <MenuItem Header="Clear" Command="{Binding SendCommand}" CommandParameter="clear" />
        <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="Icons/pauseplay.ico"
                    ToolTipText="{Binding GetStatus}"
                    DoubleClickCommand="{Binding PlayPauseCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">

        <tb:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>

</ResourceDictionary>